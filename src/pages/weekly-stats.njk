---
layout: base-weekly-stats.njk
pagination:
    data: stats.weeklyStats
    size: 1
    alias: week
permalink: "weekly-stats/{{ week.date | slugify }}/"
---

<div class="week-selection-drop-down">
    <select name="week-dropdown" id="week-dropdown">
        <option selected value="Unselected">Unselected</option>
    {% for availableWeek in stats.availableWeeks %}
        {{ availableWeek.Date }}
        <option {% if availableWeek.Date === week.date %} 
                    selected=true 
                {% endif %} value="/{{ availableWeek.Date | statsdate | slugify }}/">{{ availableWeek.Date | statsdate }}</option>
    {% endfor %}
    </select>
</div>

<script type="text/javascript">
    var urlmenu = document.getElementById('player-names-dropdown');
    urlmenu.onchange = function() {
        if (this.options[this.selectedIndex].value === "Unselected") {
            window.location = `/weekly-stats-home/`;
        }
        else {
            window.location = `/weekly-stats${this.options[this.selectedIndex].value}`;
        }
    };
</script>

