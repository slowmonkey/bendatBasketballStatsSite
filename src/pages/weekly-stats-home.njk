---
title: "Weekly Stats Home"
---

<div class="week-selection-drop-down">
    <select name="week-dropdown" id="week-dropdown">
        <option selected value="{{ 'week-stats-home' | url }}">Unselected</option>
    {% for availableWeek in stats.availableWeeks %}
        <option value="/{{ availableWeek.Date | statsdate | slugify | url }}/">{{ availableWeek.Date | statsdate }}</option>
    {% endfor %}
    </select>
</div>

<script type="text/javascript">
    var urlmenu = document.getElementById('player-names-dropdown');
    urlmenu.onchange = function() {
        window.location = `${this.options[this.selectedIndex].value}`;
    };
</script>

<p>Please select a week to start</p>